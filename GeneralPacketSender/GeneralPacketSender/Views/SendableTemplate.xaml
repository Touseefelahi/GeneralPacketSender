<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodel="clr-namespace:GeneralPacketSender.Viewmodels">
    <DataTemplate DataType="{x:Type viewmodel:SenderViewmodel}">
        <Grid
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <StackPanel>
                <ContentPresenter Content="{Binding Sendable}" />
                <Button Command="{Binding SendCommand}" Content="Send" />
                <DataGrid Width="300" ItemsSource="{Binding Result}" />
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>